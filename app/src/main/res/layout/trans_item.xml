<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:background="@color/lightGray"
    android:elevation="4dp"
    android:layout_marginHorizontal="5dp"
    android:paddingVertical="2dp">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/trans_intials"
        android:text="KM"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        app:layout_constraintRight_toLeftOf="@id/trans_desc"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <TextView
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/trans_intials"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="3dp"
        android:paddingHorizontal="4dp"
        android:id="@+id/trans_desc"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:text="Kdsjdc jd"
        android:textSize="18sp"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        app:layout_constraintRight_toLeftOf="@id/trans_amount"
        android:fontFamily="serif"
        android:maxLines="2"
        />
    <TextView
        android:id="@+id/trans_amount"
        android:paddingHorizontal="4dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="-$50.00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/trans_edit"
        app:layout_constraintLeft_toRightOf="@id/trans_desc"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:gravity="center"/>

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/trans_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/trans_delete"
        android:layout_width="35dp"
        app:tint="@color/blue"
        android:layout_height="35dp"
        android:src="@drawable/ic_edit"/>

    <ImageView
        app:tint="@color/red"
        android:contentDescription="@string/app_name"
        android:id="@+id/trans_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_delete"/>

</androidx.constraintlayout.widget.ConstraintLayout>